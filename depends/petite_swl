#!/bin/sh

MACHINE=`uname`

if [ $MACHINE == "Linux" ];
then DIR=i3le;
elif [ $MACHINE == "Darwin" ];
then DIR=ppcosx;
elif [ $MACHINE == "Windows" ];
then DIR=i3nt;
else echo Unknown platform: $MACHINE
fi

export SWL_ROOT=$WAVESCRIPTD/depends/swl0.9z/swllib
export SWL_LIBRARY=$WAVESCRIPTD/depends/swl0.9z/bin/$DIR

export TCL_LIBRARY=$WAVESCRIPTD/depends/tcltk/tcllib/
export TK_LIBRARY=$WAVESCRIPTD/depends/tcltk/tklib/
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$WAVESCRIPTD/depends/tcltk/$DIR

#echo $SWL_ROOT
#echo $SWL_LIBRARY
exec $WAVESCRIPTD/depends/petite -b $SWL_LIBRARY/swl.boot $*
