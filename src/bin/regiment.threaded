#! /bin/bash

# Use a default location if it is not set.
if ! [ $WAVESCRIPTD ]; then 
    if [ -d $HOME/regiment_alpha ];
    then WAVESCRIPTD=$HOME/regiment_alpha/; 
    elif [ -d $HOME/macroprogramming/regiment_alpha ];
    then WAVESCRIPTD=$HOME/macroprogramming/regiment_alpha/; 

    elif [ -d /usr/regiment/ ];
    then WAVESCRIPTD=/usr/regiment/; 
    elif [ -d /usr/local/regiment/ ];
    then WAVESCRIPTD=/usr/local/regiment/; 
    fi;
fi

$WAVESCRIPTD/src/regiment_script.threaded.ss $*;
