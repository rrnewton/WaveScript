#!/bin/bash

source `dirname $0`/assert_wavescriptd

if [ ! -f "$1" ];
then echo Usage: "ws <file> <options ...>";
     echo   File \"$1\" does not exist.
     exit 1;
fi

if [ "$WAVESCRIPTEXEC" == "" ]; then WAVESCRIPTEXEC=wavescript; fi

D=`dirname "$1"`
B=`basename "$1"`
abspath="`cd \"$D\" 2>/dev/null && pwd || echo \"$D\"`/$B"
shift

(export WAVESCRIPT_OR_WAVESCRIPT=WS;
 "$WAVESCRIPTEXEC" wsearly $abspath ${1+"$@"};)
