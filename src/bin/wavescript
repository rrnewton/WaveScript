#! /bin/bash

if [ "$WAVESCRIPTHOST" == "petite" ]; 
then exec wavescript.petite $*;
elif [ "$WAVESCRIPTHOST" == "chez" ]; 
then exec wavescript.chez $*;
elif [ "$WAVESCRIPTHOST" == "plt" ]; 
then exec wavescript.plt  $*;


# Otherwise choose a default, in a particular preference order:

elif [ "$CHEZD" != "" ]
then exec wavescript.chez  $*;
else exec wavescript.plt   $*;
fi
